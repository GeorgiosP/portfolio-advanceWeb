<!-- this will have all my contact information includign github and linked-in and the abiility to send out emails -->
<%- include partials/header.ejs %>



<div class="panel panel-default">
<h1><%= title %></h1>
<div class="panel-body">
<h2>keep in contact with me by filling out this form!</h2>
<form class="form-horizontal" action="/send" method="post">
<div class="form-group">
<label for="name" class="col-sm-2">Name:</label>
<input class="form-control" name="name" id="name" placeholder="Enter your name here">
</div>

<div class="form-group">
<label for="email" class="col-sm-2">Email:</label>
<input class="form-control" name="email" required type="email" id="email" placeholder="Enter your email here">
</div>
<div class="form-group">
<label for="message" class="col-sm-2">Message:</label>
 <textarea name="message" class="form-control" rows="5" id="message"></textarea>
</div>

<div class="col-sm-offset-0">
      <input  type="submit" value="Submit" class="btn btn-primary" />
  </div>
</form>
</div>
</div>

<%- include partials/footer.ejs %>
